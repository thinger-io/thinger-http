@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find required dependencies
find_dependency(Threads)
find_dependency(Boost COMPONENTS system)

# Check if SSL was enabled
set(THINGER_HTTP_SSL_ENABLED @THINGER_HTTP_ENABLE_SSL@)
if(THINGER_HTTP_SSL_ENABLED)
    find_dependency(OpenSSL)
endif()

# Include the targets file
include("${CMAKE_CURRENT_LIST_DIR}/ThingerHttpTargets.cmake")

# Provide variables for convenience
set(THINGER_HTTP_LIBRARIES thinger::http)
set(THINGER_HTTP_INCLUDE_DIRS "${PACKAGE_PREFIX_DIR}/include")

check_required_components(thinger_http)